# ============================================
# CONFIGURACIÓN DEL BACKEND - EJEMPLO
# ============================================
# Copia este archivo como .env.development o .env.production
# y completa con tus datos reales

NODE_ENV=development
PORT=3001

# PostgreSQL (formato: postgresql://user:password@host:port/database)
DATABASE_URL=postgresql://usuario:password@localhost:5432/bearstrike_dev

# JWT Secret (genera uno único y seguro, mínimo 32 caracteres)
JWT_SECRET=tu_jwt_secret_muy_seguro_y_largo_aqui_min_32_caracteres
JWT_EXPIRES_IN=7d

# CORS (dominios permitidos, separados por coma)
ALLOWED_ORIGINS=http://localhost:8080,http://127.0.0.1:8080

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
