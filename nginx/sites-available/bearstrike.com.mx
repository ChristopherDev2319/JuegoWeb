# ============================================
# NGINX Site Configuration - BearStrike
# File: /etc/nginx/sites-available/bearstrike.com.mx
# Symlink to: /etc/nginx/sites-enabled/bearstrike.com.mx
# ============================================

# Upstream servers
upstream bearstrike_game {
    server 127.0.0.1:3000;
    keepalive 32;
}

upstream bearstrike_api {
    server 127.0.0.1:3001;
    keepalive 16;
}

upstream bearstrike_web {
    server 127.0.0.1:8080;
    keepalive 16;
}

# Rate limiting
limit_req_zone $binary_remote_addr zone=bearstrike_api:10m rate=10r/s;
limit_req_zone $binary_remote_addr zone=bearstrike_ws:10m rate=5r/s;
limit_conn_zone $binary_remote_addr zone=bearstrike_conn:10m;

# HTTP -> HTTPS redirect
server {
    listen 80;
    listen [::]:80;
    server_name bearstrike.com.mx www.bearstrike.com.mx;
    
    location /.well-known/acme-challenge/ {
        root /var/www/certbot;
    }
    
    location / {
        return 301 https://bearstrike.com.mx$request_uri;
    }
}

# Redirect www to non-www
server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name www.bearstrike.com.mx;
    
    ssl_certificate /etc/letsencrypt/live/bearstrike.com.mx/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/bearstrike.com.mx/privkey.pem;
    
    return 301 https://bearstrike.com.mx$request_uri;
}

# Main server block
server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name bearstrike.com.mx;
    
    # SSL certificates
    ssl_certificate /etc/letsencrypt/live/bearstrike.com.mx/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/bearstrike.com.mx/privkey.pem;
    ssl_trusted_certificate /etc/letsencrypt/live/bearstrike.com.mx/chain.pem;
    
    # SSL settings
    ssl_session_timeout 1d;
    ssl_session_cache shared:BearStrikeSSL:10m;
    ssl_session_tickets off;
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-RSA-AES128-GCM-SHA256:ECDHE-ECDSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-GCM-SHA384;
    ssl_prefer_server_ciphers off;
    
    # OCSP Stapling
    ssl_stapling on;
    ssl_stapling_verify on;
    resolver 8.8.8.8 8.8.4.4 valid=300s;
    resolver_timeout 5s;
    
    # Security headers
    add_header Strict-Transport-Security "max-age=31536000; includeSubDomains" always;
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header Referrer-Policy "strict-origin-when-cross-origin" always;
    
    # Content Security Policy para permitir blobs y WebSockets
    add_header Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' data: blob:; connect-src 'self' blob: https://bearstrike.com.mx wss://bearstrike.com.mx; worker-src 'self' blob:; media-src 'self' blob:;" always;
    
    # Gzip
    gzip on;
    gzip_vary on;
    gzip_proxied any;
    gzip_comp_level 6;
    gzip_min_length 256;
    gzip_types
        application/javascript
        application/json
        application/xml
        text/css
        text/javascript
        text/plain
        text/xml
        image/svg+xml;
    
    # Connection limits
    limit_conn bearstrike_conn 20;
    
    # Root directory
    root /var/www/bearstrike;
    index index.html;
    
    # Logging
    access_log /var/log/nginx/bearstrike.access.log;
    error_log /var/log/nginx/bearstrike.error.log;
    
    # WebSocket for game
    location /ws {
        limit_req zone=bearstrike_ws burst=10 nodelay;
        
        proxy_pass http://bearstrike_game;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # Long timeouts for WebSocket
        proxy_connect_timeout 7d;
        proxy_send_timeout 7d;
        proxy_read_timeout 7d;
        proxy_buffering off;
    }
    
    # Direct WebSocket connection (fallback)
    location /socket.io/ {
        proxy_pass http://bearstrike_game;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_buffering off;
    }
    
    # API routes
    location /api/ {
        limit_req zone=bearstrike_api burst=20 nodelay;
        
        proxy_pass http://bearstrike_api;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        proxy_connect_timeout 30s;
        proxy_send_timeout 30s;
        proxy_read_timeout 30s;
    }
    
    # Static assets with long cache
    location ~* \.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot)$ {
        expires 1y;
        add_header Cache-Control "public, immutable";
        try_files $uri @fallback;
    }
    
    # Audio files
    location ~* \.(mp3|wav|ogg|m4a)$ {
        expires 30d;
        add_header Cache-Control "public";
        try_files $uri @fallback;
    }
    
    # 3D models
    location ~* \.(glb|gltf|obj|fbx)$ {
        expires 30d;
        add_header Cache-Control "public";
        try_files $uri @fallback;
    }
    
    # HTML - no cache
    location ~* \.html$ {
        expires -1;
        add_header Cache-Control "no-store, no-cache, must-revalidate";
        try_files $uri @fallback;
    }
    
    # Main location
    location / {
        try_files $uri $uri/ @fallback;
    }
    
    # Fallback to Node.js web server
    location @fallback {
        proxy_pass http://bearstrike_web;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
    
    # Health check
    location /health {
        access_log off;
        return 200 "OK";
        add_header Content-Type text/plain;
    }
    
    # Deny hidden files
    location ~ /\. {
        deny all;
    }
    
    # Error pages
    error_page 500 502 503 504 /50x.html;
    location = /50x.html {
        root /usr/share/nginx/html;
        internal;
    }
}
